{% extends "base.html.twig" %}

{% block body %}

    <div class="center-screen">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('login') }}" method="post">
            <input type="hidden" name="_target_path" value="/folder/"/><br>
            <input type="text" id="username" placeholder="Username" name="_username" value="{{ last_username }}"/><br>
            <input type="password" placeholder="Password" id="password" name="_password"/><br>
            <button type="submit">Login</button>
        </form>
    </div>
{% endblock %}
